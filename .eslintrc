{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "space-before-function-paren": 0,
    "space-before-blocks": 0,
    "semi" : 0,
    "keyword-spacing": 0,
    "eqeqeq": 0,
    "max-len": [2, 120, 2],
    "generator-star-spacing": 0,
    "yield-star-spacing": 0,
    "camelcase": 0,
    "babel/generator-star-spacing": 0,
    "jsx-quotes": [2, "prefer-single"],
    "react/prop-types": 0
  }
}
